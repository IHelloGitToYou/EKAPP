<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#000">

    <CheckBox
        android:id="@+id/edit_isSelected"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/label_Z_work_no"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="3dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/label_prd_no"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="4dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/label_FD_width"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"  />

    <TextView
        android:id="@+id/label_FD_core"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"  />

    <TextView
        android:id="@+id/label_so_no"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="7dp"
        android:layout_weight="1"  />

    <TextView
        android:id="@+id/label_show_qty"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"  />

    <TextView
        android:id="@+id/label_Z_print"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginLeft="9dp"
        android:layout_weight="1"  />

</LinearLayout>